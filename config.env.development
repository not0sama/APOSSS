# ============================================================================
# APOSSS DEVELOPMENT CONFIGURATION EXAMPLE
# Copy this file to .env and modify values for your development environment
# ============================================================================

# ============================================================================
# API KEYS & CREDENTIALS
# ============================================================================

# Gemini API Configuration
GEMINI_API_KEY=your_actual_gemini_api_key_here

# Security Configuration
JWT_SECRET_KEY=development_jwt_secret_key_change_in_production_minimum_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MongoDB Database URIs (Development)
MONGODB_URI_ACADEMIC_LIBRARY=mongodb://localhost:27017/Academic_Library
MONGODB_URI_EXPERTS_SYSTEM=mongodb://localhost:27017/Experts_System
MONGODB_URI_RESEARCH_PAPERS=mongodb://localhost:27017/Research_Papers
MONGODB_URI_LABORATORIES=mongodb://localhost:27017/Laboratories
MONGODB_URI_FUNDING=mongodb://localhost:27017/Funding
MONGODB_URI_APOSSS=mongodb://localhost:27017/APOSSS

# MongoDB Connection Settings
MONGODB_MAX_POOL_SIZE=20
MONGODB_MIN_POOL_SIZE=2
MONGODB_CONNECT_TIMEOUT_MS=5000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# ============================================================================
# EMAIL/SMTP CONFIGURATION
# ============================================================================

# SMTP Server Configuration (Development - Gmail example)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password

# Email Templates
EMAIL_FROM_NAME=APOSSS Development
EMAIL_FROM_ADDRESS=noreply@aposss-dev.local
EMAIL_SUPPORT_ADDRESS=support@aposss-dev.local

# ============================================================================
# OAUTH CONFIGURATION
# ============================================================================

# Google OAuth (Development)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ORCID OAuth (Development - Use sandbox)
ORCID_CLIENT_ID=your_orcid_client_id
ORCID_CLIENT_SECRET=your_orcid_client_secret
ORCID_ENVIRONMENT=sandbox

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=development_flask_secret_key_change_in_production

# Application Settings
APP_NAME=APOSSS Development
APP_DESCRIPTION=Academic Portal for Open Science Search System - Development

# Application URLs
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5000
API_BASE_URL=http://localhost:5000/api

# CORS Configuration (Development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Server Configuration
HOST=127.0.0.1
PORT=5000
WORKERS=1
MAX_CONNECTIONS=100

# SSL/Security (Disabled for development)
FORCE_HTTPS=false

# ============================================================================
# CACHING CONFIGURATION
# ============================================================================

# Cache Directories
EMBEDDING_CACHE_DIR=embedding_cache
PRODUCTION_INDEX_CACHE_DIR=production_index_cache
LTR_MODELS_DIR=ltr_models

# Cache Settings
EMBEDDING_CACHE_SIZE_MB=512
FAISS_INDEX_REBUILD_HOURS=24
LTR_MODEL_RETRAIN_HOURS=168

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Logging Settings
LOG_LEVEL=DEBUG
LOG_FILE_PATH=logs/aposss_dev.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=3
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Rate Limiting (Relaxed for development)
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000
RATE_LIMIT_PER_DAY=100000

# Password Policy
MIN_PASSWORD_LENGTH=6
REQUIRE_PASSWORD_COMPLEXITY=false
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=30
EMAIL_VERIFICATION_TOKEN_EXPIRY_HOURS=24

# Session Configuration
SESSION_TIMEOUT_HOURS=24
REMEMBER_ME_DAYS=30
MAX_FAILED_LOGIN_ATTEMPTS=10
ACCOUNT_LOCKOUT_MINUTES=5

# ============================================================================
# SEARCH & AI CONFIGURATION
# ============================================================================

# Search Settings
MAX_SEARCH_RESULTS=50
DEFAULT_SEARCH_RESULTS=20
SEMANTIC_SEARCH_THRESHOLD=0.7
SEARCH_TIMEOUT_SECONDS=30

# LLM Configuration
LLM_REQUEST_TIMEOUT_SECONDS=30
LLM_MAX_RETRIES=3
LLM_RATE_LIMIT_PER_MINUTE=100

# Embedding Configuration
EMBEDDING_MODEL_NAME=paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_BATCH_SIZE=16
EMBEDDING_DIMENSION=384

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================

# Application Monitoring
HEALTH_CHECK_INTERVAL_SECONDS=60
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=30
USER_BEHAVIOR_TRACKING=true

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=./backups

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================

# Content Delivery Network (Disabled for development)
STATIC_FILES_CDN=false

# External APIs
EXTERNAL_API_TIMEOUT_SECONDS=10
EXTERNAL_API_RETRIES=3

# File Upload
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=pdf,doc,docx,txt
UPLOAD_FOLDER=uploads

# ============================================================================
# DEVELOPMENT/TESTING
# ============================================================================

# Development Settings
DEVELOPMENT_MODE=true
DEBUG_SQL_QUERIES=false
FAKE_EMAIL_DELIVERY=false
SKIP_SSL_VERIFICATION=true

# Testing
TEST_DATABASE_PREFIX=test_
PYTEST_TIMEOUT_SECONDS=30 